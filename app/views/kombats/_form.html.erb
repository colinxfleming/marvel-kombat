<% cache render_async_cache_key(request.path), skip_digest: true do %>
  <%= form_with url: kombat_path, method: :post do %>
    <div class="hero-1-input">
      <h2>Select one hero and a seed number:</h2>

      <%= select_tag :hero_1,
                     options_for_select(@hero_selection) %>
      <%= select_tag :hero_1_seed,
                     options_for_select((1..KombatLogic::SEED_NUMBER_MAX)) %>
    </div>

    <div class="hero-2-input">
      <h2>Select a second hero and a seed number:</h2>

      <div class="hero-2-name">
        <%= select_tag :hero_2,
                       options_for_select(@hero_selection) %>
        <%= select_tag :hero_2_seed,
                       options_for_select((1..KombatLogic::SEED_NUMBER_MAX)) %>
      </div>
    </div>
    <br />

    <div class="submit-section">
      <%= submit_tag :submit %>    
    </div>
  <% end %>  
<% end %>
